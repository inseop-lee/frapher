                            "items": {
                                "type": "object",
                                "required": ["key","value","exp"],
                                "properties": {
                                    "key": { "type": "string", "default": "" },
                                    "value": { "type": "string", "default": "" },
                                    "exp": { "type": "string", "enum": ["eq","ne","lt","le","gt","ge","in","null","notNull"] }
                                }
                            }
                        }
                    }
                }
            }
        },
