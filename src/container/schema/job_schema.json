                    }
                }
            }
        },
        {
            "title": "http",
            "type": "object",
            "required": [
                "result",
                "type",
                "source",
                "info"
            ],
            "properties": {
                "result": {
                    "title": "Result",
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "default": "http",
                    "enum": ["http"]
                },
                "source": {
                    "title": "Data Source",
                    "type": "string",
                    "enum": [
                        "device/snapshot",
                        "custom"
                    ]
                },
                "info": {
                    "title": "Info",
                    "type": "object",
                    "required": [
                        "method",
                        "headers"
                    ],
                    "properties": {
                        "port": {
                            "title": "Port number",
                            "type": "string",
                            "examples": [
                                "443",
                                "80"
                            ],
                            "pattern": "[0-9]{1,5}"
                        },
                        "url": {
                            "title": "URL (without domain)",
                            "type": "object",
                            "required": [
                                "path",
                                "parameter"
                            ],
                            "properties": {
                                "path": {
                                    "type": "string"
                                },
                                "parameter": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "method": {
                            "title": "HTTP Method",
                            "type": "string",
                            "enum": [
                                "GET",
                                "POST",
                                "DELETE",
                                "PUT"
                            ]
                        },
                        "headers": {
                            "title": "Request Header",
                            "type": "object",
                            "required": [
                                "Content-Type",
                                "Accept",
                                "x-country-code",
                                "x-service-phase",
                                "x-api-key",
                                "x-message-id"
                            ],
                            "properties": {
                                "Content-Type": {
                                    "type": "string",
                                    "default": "application/json;charset=UTF-8"
                                },
                                "Accept": {
                                    "type": "string",
                                    "default": "application/json"
                                },
                                "x-country-code": {
                                    "type": "string",
                                    "default": "$.countryCode"
                                },
                                "x-service-phase": {
                                    "type": "string",
                                    "default": "$.servicePhase"
                                },
                                "x-api-key": {
                                    "type": "string",
                                    "default": "VGhpblEyLjAgU0VSVklDRQ=="
                                },
                                "x-message-id": {
                                    "type": "string",
                                    "default": "$.messageId"
                                }
                            }
                        },
                        "parameters": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "body": {
                            "type": "object"
                        }
                    }
                }
            }
        },
