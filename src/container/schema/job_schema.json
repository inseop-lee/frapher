                "type": {
                    "type": "string",
                    "title": "Job Type",
                    "default": "calculator",
                    "enum": ["calculator"]
                },
                "info": {
                    "title":"Info",
                    "type": "object",
                    "required": ["expression","params"],
                    "properties": {
